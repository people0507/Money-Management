<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/linear_gradient100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/big_avt"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="30dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Username"
                android:textAppearance="@style/SmallText_2"
                android:textAlignment="center"
                android:textColor="@color/grey_desTrans"/>
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Vishnu P V"
                android:textAppearance="@style/SmallText_5"
                android:textStyle="bold"
                android:textAlignment="center"/>


        </LinearLayout>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:src="@drawable/pencil_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center">

         <androidx.appcompat.widget.AppCompatButton
             android:layout_width="380dp"
             android:layout_height="100dp"
             android:gravity="center_vertical"
             android:background="@drawable/box1_profile"
             android:textAppearance="@style/ThinText" />
         <androidx.appcompat.widget.AppCompatButton
             android:layout_width="380dp"
             android:layout_height="100dp"
             android:gravity="center_vertical"
             android:background="@drawable/box2_profile"
             android:textAppearance="@style/ThinText" />
         <androidx.appcompat.widget.AppCompatButton
             android:layout_width="380dp"
             android:layout_height="100dp"
             android:gravity="center_vertical"
             android:background="@drawable/box3_profile"
             android:textAppearance="@style/ThinText" />
         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/logout_profile"
             android:layout_width="380dp"
             android:layout_height="100dp"
             android:gravity="center_vertical"
             android:background="@drawable/box4_profile"
             android:textAppearance="@style/ThinText" />

         </LinearLayout>
 </FrameLayout>

</LinearLayout>
